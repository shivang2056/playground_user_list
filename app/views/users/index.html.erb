<div class="max-w-[60rem] m-auto">
  <div class="flex justify-end gap-10 my-20 pb-4 border-b-2 border-gray-200">
    <%= form_with url: users_path, method: :get, class: "relative w-[20rem]" do |form| %>
      <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
          <svg class="w-4 h-4 text-gray-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
          </svg>
      </div>

      <%= form.text_field :name, class: "block w-full px-5 py-2.5 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500", placeholder: 'Search', value: params[:name] %>
      <%= form.submit "Search", class: "text-white absolute end-1 bottom-1 bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2", data: { turbo_frame: 'users' } %>
    <% end %>

    <div class="text-white bg-gradient-to-r from-red-400 via-red-500 to-red-600 hover:bg-gradient-to-br hover:font-semibold focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2">
      <%= link_to 'New User', new_user_path, data: { turbo_frame: 'new_user' } %>
    </div>
  </div>

  <div>
    <%= turbo_frame_tag "new_user" %>

    <%= turbo_frame_tag "users" do %>
      <%= render @users %>
    <% end %>
  </div>
</div>